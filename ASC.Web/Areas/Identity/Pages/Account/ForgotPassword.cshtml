@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <form method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Input.Email" type="email" class="validate">
                        <label asp-for="Input.Email">Email</label>
                        <span class="helper-text" data-error="wrong" data-success="right" />
                    </div>
                </div>
                <div class="row center">
                    <button class="btn waves-effect waves-light" type="submit">
                        Reset
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    .container {
        margin-top: 50px; /* Thêm khoảng cách phía trên container */
        margin-bottom: 50px; /* Thêm khoảng cách phía dưới container */
    }

    .col.offset-m3 {
        margin-top: 20px; /* Thêm khoảng cách phía trên form */
    }

    .form-horizontal {
        padding: 20px;
        border: 1px solid #e0e0e0; /* Thêm viền cho form */
        border-radius: 8px; /* Bo tròn góc form */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ cho form */
    }

    .input-field label {
        color: #757575; /* Màu chữ cho label */
    }

    .input-field input[type=email]:focus + label {
        color: #26a69a; /* Màu chữ label khi input được focus */
    }

    .input-field input[type=email]:focus {
        border-bottom: 1px solid #26a69a; /* Màu viền khi input được focus */
        box-shadow: 0 1px 0 0 #26a69a; /* Màu bóng đổ khi input được focus */
    }

    .btn {
        background-color: #26a69a; /* Màu nền cho nút reset */
    }

        .btn:hover {
            background-color: #2bbbad; /* Màu nền khi hover nút reset */
        }

    .text-danger {
        margin-bottom: 10px; /* Khoảng cách phía dưới thông báo lỗi */
    }

    /* Điều chỉnh khoảng cách giữa các phần tử trong form */
    .row {
        margin-bottom: 15px;
    }
</style>