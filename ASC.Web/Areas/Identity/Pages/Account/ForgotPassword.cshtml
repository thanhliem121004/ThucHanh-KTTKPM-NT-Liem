@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="text-center mb-4 mt-5">
                <h2>@ViewData["Title"]</h2>
            </div>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                <div class="mb-4">
                    <input asp-for="Input.Email" type="email" class="form-control form-control-lg border-0 border-bottom rounded-0"
                           placeholder="Email" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-primary px-5">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-control {
        padding: 1rem 0.25rem;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}